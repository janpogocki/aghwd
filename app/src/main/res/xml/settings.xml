<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <PreferenceCategory
        android:title="@string/app_startup"
        android:key="pref_key_startup_settings">

        <ListPreference
            android:key="default_start_screen"
            android:title="@string/settings_start_screen_title"
            android:defaultValue="@string/default_start_screen_value"
            android:negativeButtonText="@string/action_cancel"
            android:summary="%s"
            android:entries="@array/start_screen_entries"
            android:entryValues="@array/start_screen_values" />

        <ListPreference
            android:key="night_mode"
            android:title="@string/settings_night_mode_title"
            android:defaultValue="@string/night_mode_value"
            android:negativeButtonText="@string/action_cancel"
            android:summary="%s"
            android:entries="@array/night_mode_entries"
            android:entryValues="@array/night_mode_values" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/privacy"
        android:key="pref_key_notifications">

        <Preference
            android:key="remove_all_mycal_events"
            android:title="Wyczyść mój kalendarz"
            android:summary="Usuwa wszystkie wydarzenia dodane przez bieżącego użytkownika" />

        <Preference
            android:key="remove_all_pm_entries"
            android:title="Wyczyść Oceny cząstkowe"
            android:summary="Usuwa wszystkie oceny cząstkowe dodane przez bieżącego użytkownika" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/push_notifications"
        android:key="pref_key_notifications">

        <SwitchPreference
            android:key="marks_notifications"
            android:title="@string/new_marks"
            android:defaultValue="true"
            android:summary="@string/new_marks_summary" />

        <SwitchPreference
            android:key="news_notifications"
            android:title="@string/agh_urgent_info"
            android:defaultValue="true"
            android:summary="@string/agh_urgent_info_summary" />

    </PreferenceCategory>
</PreferenceScreen>