<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="pl.janpogocki.agh.wirtualnydziekanat.SummaryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout8"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="95dp"
                android:id="@+id/imageView5"
                android:src="@drawable/agh_kolor"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="aghLogo" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:id="@+id/imageViewPhotoUser"
                android:src="@drawable/agh_kolor"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:contentDescription="photoUser" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Imię DrugieImię Nazwisko"
                android:textStyle="bold"
                android:gravity="bottom"
                android:textSize="28dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:id="@+id/textViewNameAndSurname"
                android:layout_alignBottom="@+id/imageViewPhotoUser"
                android:layout_toRightOf="@+id/imageViewPhotoUser"
                android:layout_alignRight="@+id/imageView5"
                android:layout_alignEnd="@+id/imageView5"
                android:layout_alignParentTop="true" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_centerHorizontal="true"
                android:id="@+id/relativeLayout7"
                android:layout_below="@+id/imageViewPhotoUser">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nr albumu: "
                    android:id="@+id/textView13"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="123456"
                    android:textColor="@color/colorBlackText"
                    android:textStyle="bold"
                    android:id="@+id/textViewAlbumNumber"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView13"
                    android:layout_toEndOf="@+id/textView13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="PESEL: "
                    android:id="@+id/textView15"
                    android:layout_below="@+id/textView13"
                    android:layout_toLeftOf="@+id/textViewAlbumNumber"
                    android:layout_toStartOf="@+id/textViewAlbumNumber" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="99887712345"
                    android:textColor="@color/colorBlackText"
                    android:textStyle="bold"
                    android:id="@+id/textViewPeselNumber"
                    android:layout_below="@+id/textView13"
                    android:layout_toRightOf="@+id/textView13"
                    android:layout_toEndOf="@+id/textView13" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutListView">

                <pl.janpogocki.agh.wirtualnydziekanat.javas.NonScrollListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listView" />

            </RelativeLayout>

    </LinearLayout>

    </ScrollView>



</RelativeLayout>
