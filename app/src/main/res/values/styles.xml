<resources>

    <attr name="aghMainLogo" format="reference|integer|string" />
    <attr name="aghLogoBackground" format="reference|integer|string" />
    <attr name="blackTextMedium" format="reference|color" />
    <attr name="blackTextSmall" format="reference|color" />
    <attr name="blackTint" format="reference|color" />
    <attr name="lightGray2" format="reference|color" />
    <attr name="lightGray3" format="reference|color" />
    <attr name="toolbarPopup" format="reference|color" />
    <attr name="whiteBackground" format="reference|color" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhiteBackground</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>

        <item name="aghMainLogo">@drawable/agh_kolor</item>
        <item name="aghLogoBackground">@color/colorWhiteBackground</item>
        <item name="blackTextMedium">@color/colorBlackText</item>
        <item name="blackTextSmall">@color/colorBlackText</item>
        <item name="blackTint">@color/colorBlackText</item>
        <item name="lightGray2">@color/colorLightGray2</item>
        <item name="lightGray3">@color/colorLightGray3</item>
        <item name="whiteBackground">@color/colorWhiteBackground</item>
    </style>

    <!-- Dark style -->
    <style name="AppThemeNight" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>

        <item name="aghMainLogo">@drawable/agh_biale</item>
        <item name="aghLogoBackground">@drawable/agh_logo_dark_gradient</item>
        <item name="blackTextMedium">@color/colorWhiteBackground</item>
        <item name="blackTextSmall">@color/colorWhiteBackground</item>
        <item name="blackTint">@color/colorLightGray3</item>
        <item name="lightGray2">@color/colorLightGray2Dark</item>
        <item name="lightGray3">@color/colorLightGray3Dark</item>
        <item name="whiteBackground">@color/colorPrimaryDarkNight</item>

        <item name="android:windowBackground">@color/colorBlackText</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="BlackTextMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">?blackTextMedium</item>
    </style>

    <style name="BlackTextSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">?blackTextSmall</item>
    </style>

    <style name="BlackTint">
        <item name="android:tint">?blackTint</item>
    </style>

    <style name="AghMainLogo">
        <item name="android:src">?aghMainLogo</item>
    </style>

    <style name="AghLogoBackground">
        <item name="android:background">?aghLogoBackground</item>
    </style>

    <style name="LightGray2">
        <item name="android:background">?lightGray2</item>
    </style>

    <style name="LightGray3">
        <item name="android:background">?lightGray3</item>
    </style>

    <style name="WhiteBackground">
        <item name="android:background">?whiteBackground</item>
    </style>

    <!-- ******************** -->

    <style name="AppTheme.NoActionBarr" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorWhiteBackground</item>
        <item name="aghMainLogo">@drawable/agh_kolor</item>
        <item name="blackTint">@color/colorBlackText</item>
    </style>

    <!-- Dark style -->
    <style name="AppTheme.NoActionBarrNight" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="aghMainLogo">@drawable/agh_biale</item>
        <item name="blackTint">@color/colorLightGray3</item>

        <item name="android:windowBackground">@color/colorBlackText</item>
    </style>

    <!-- ******************** -->

    <style name="ToolbarStyle">
        <item name="colorControlNormal">@color/colorWhiteBackground</item>
        <item name="android:editTextColor">@color/colorWhiteBackground</item>
        <item name="android:textColorHint">@color/colorWhiteHint</item>
        <item name="android:spinnerItemStyle">@style/ToolbarStyle.SpinnerItemStyle</item>
    </style>

    <style name="ToolbarStyle.SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorWhiteBackground</item>
    </style>
</resources>
